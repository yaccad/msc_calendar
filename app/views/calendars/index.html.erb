<h1>MSC Emailing Jobs</h1>

<div id="jobs">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @jobs_by_date[date] %>
      <ul>
        <% @jobs_by_date[date].each do |job| %>
          <li><%= link_to job.name, job %> |
			  <%= job.description %> |
			  Estimated Quantity:<%= job.quantity %>
		</li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>

<p><%= link_to "New Job", new_job_path %></p>
